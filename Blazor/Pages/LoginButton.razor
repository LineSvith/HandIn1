@using HttpClients.AuthServices
@namespace Login
@inject NavigationManager NavMgr
@inject IAuthService AuthServices


<AuthorizeView>
    <Authorized>
        <img class="icon" src="img/Logout.png" @onclick="Logout" alt=""/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="img/Login.png" @onclick="Login" alt=""/>
    </NotAuthorized>
</AuthorizeView>


@code {

    private void Login()
    {
        NavMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await AuthServices.LogoutAsync();
        NavMgr.NavigateTo("/");
    }

}